<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_orange_islander"
    android:padding="@dimen/regular_margin" >

    <Button
        android:id="@+id/bt_cancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_standard_button"
        android:text="@string/islander_button_cancel"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/text_size_regular"
        android:textStyle="bold" />

    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/bt_cancel"
        android:layout_marginBottom="@dimen/regular_spacing" >
    </SurfaceView>

    <com.google.zxing.client.android.camera.ViewfinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/bt_cancel"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/regular_spacing" />

</RelativeLayout>